<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - The T Shirt Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
    </style>
  </head>

  <body>
    <!-- Shared Header Include -->
    <%- include('partials/header', { cart: cart, session: session }) %>

    <!-- Register Form Content -->
    <main class="container my-5">
      <h2 class="mb-4">Create a New Account</h2>
      <div class="alert alert-info w-50 mx-auto">
        <strong>Important:</strong> Please make a note of your email and
        password. Youâ€™ll need them to log in again!
      </div>

      <% if (error) { %>
      <div class="alert alert-danger w-50 mx-auto"><%= error %></div>
      <% } %>

      <form id="registerForm" action="/register" method="POST" class="w-50 mx-auto">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter your name"
            required
          />
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter your email"
            required
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create a password"
            required
          />
        </div>

        <button type="submit" class="btn btn-success w-100 mb-2">Register</button>
        <button type="button" class="btn btn-secondary w-100" onclick="resetForm()">Clear Form</button>
      </form>
    </main>

    <!-- Shared Footer Include -->
    <%- include('partials/footer') %>

    <script>
      // Convert name input to Title Case on blur
      function toTitleCase(str) {
        return str
          .toLowerCase()
          .split(" ")
          .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
          .join(" ");
      }

      document.addEventListener("DOMContentLoaded", () => {
        const nameField = document.getElementById("name");

        nameField.addEventListener("blur", () => {
          nameField.value = toTitleCase(nameField.value.trim());
        });
      });

      // Reset the form fields
      function resetForm() {
        document.getElementById("registerForm").reset();
      }
    </script>
  </body>
</html>
