<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= product.name %> - The T Shirt Store</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- Shared Header Include -->
    <%- include('partials/header') %>

    <!-- Product Details Section -->
    <main class="container my-5">
      <div class="row">
        <!-- Product Image -->
        <div class="col-md-6">
          <img
            src="<%= product.image %>"
            alt="<%= product.name %>"
            class="img-fluid"
          />
        </div>

        <!-- Product Info & Add to Cart -->
        <div class="col-md-6">
          <h2><%= product.name %></h2>
          <p><%= product.description %></p>
          <p><strong>Color:</strong> <%= product.color %></p>
          <p><strong>Price:</strong> Â£<%= product.price.toFixed(2) %></p>

          <!-- Add to Cart Form -->
          <form id="addToCartForm" action="/cart/add" method="POST">
            <input type="hidden" name="productId" value="<%= product.id %>" />

            <!-- Select Size -->
            <div class="mb-3">
              <label for="size" class="form-label">Select Size</label>
              <select class="form-select" id="size" name="size" required>
                <% if (product && product.sizes && product.sizes.length > 0) {
                %> <% product.sizes.forEach(sizeObj => { %>
                <option
                  value="<%= sizeObj.size %>"
                  data-stock="<%= sizeObj.quantity %>"
                >
                  <%= sizeObj.size %> (In stock: <%= sizeObj.quantity %>)
                </option>
                <% }); %> <% } else { %>
                <option disabled>No sizes available</option>
                <% } %>
              </select>
            </div>

            <!-- Quantity -->
            <div class="mb-3">
              <label for="quantity" class="form-label">Quantity</label>
              <input
                type="number"
                id="quantity"
                name="quantity"
                class="form-control"
                min="1"
                value="1"
                required
              />
            </div>

            <!-- Add to Cart Button -->
            <button type="submit" class="btn btn-success w-100">
              Add to Cart
            </button>
          </form>
        </div>
      </div>
    </main>

    <!-- Bootstrap Modal for Error Message -->
    <div
      class="modal fade"
      id="errorModal"
      tabindex="-1"
      aria-labelledby="errorModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-warning text-dark">
            <h5 class="modal-title" id="errorModalLabel">Oops!</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body" id="errorModalBody">
            <!-- Error message inserted by JS -->
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Shared Footer Include -->
    <%- include('partials/footer') %>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Client-Side Validation Script -->
    <script>
      const addToCartForm = document.getElementById("addToCartForm");
      const sizeSelect = document.getElementById("size");
      const quantityInput = document.getElementById("quantity");

      addToCartForm.addEventListener("submit", function (e) {
        const selectedOption = sizeSelect.options[sizeSelect.selectedIndex];
        const availableStock = parseInt(
          selectedOption.getAttribute("data-stock"),
          10
        );
        const requestedQuantity = parseInt(quantityInput.value, 10);

        if (requestedQuantity > availableStock) {
          e.preventDefault(); // Stop form submission

          const errorModalBody = document.getElementById("errorModalBody");
          errorModalBody.textContent = `Only ${availableStock} left for size "${selectedOption.value}".`;

          const errorModal = new bootstrap.Modal(
            document.getElementById("errorModal")
          );
          errorModal.show();
        }
      });
    </script>
  </body>
</html>
