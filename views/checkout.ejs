<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Checkout - The T Shirt Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- Navbar/Header -->
    <header class="navbar navbar-dark bg-dark p-3">
      <div class="container">
        <a class="navbar-brand" href="/">The T Shirt Store</a>
        <nav>
          <a class="text-white me-3" href="/cart">Cart</a>
          <a class="text-white" href="/my-account">My Account</a>
        </nav>
      </div>
    </header>

    <main class="container my-5">
      <h1 class="mb-4">Checkout</h1>

      <div class="row">
        <!-- Shipping Address Form -->
        <div class="col-md-6">
          <h3>Shipping Details</h3>

          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>

          <form action="/checkout" method="POST">
            <div class="mb-3">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                name="fullName"
                id="fullName"
                class="form-control"
                required
                value="<%= user && user.name ? user.name : '' %>"
              />
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                required
                value="<%= user && user.email ? user.email : '' %>"
              />
            </div>

            <div class="mb-3">
              <label for="phone" class="form-label">Phone Number (optional)</label>
              <input
                type="tel"
                name="phone"
                id="phone"
                class="form-control"
              />
            </div>

            <div class="mb-3">
              <label for="street" class="form-label">Street Address</label>
              <input
                type="text"
                name="street"
                id="street"
                class="form-control"
                required
              />
            </div>

            <div class="mb-3">
              <label for="city" class="form-label">City</label>
              <input
                type="text"
                name="city"
                id="city"
                class="form-control"
                required
              />
            </div>

            <div class="mb-3">
              <label for="postcode" class="form-label">Postcode</label>
              <input
                type="text"
                name="postcode"
                id="postcode"
                class="form-control"
                required
              />
            </div>

            <div class="mb-3">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                name="country"
                id="country"
                class="form-control"
                required
              />
            </div>

            <!-- Guest Checkout Checkbox -->
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                name="checkoutAsGuest"
                id="checkoutAsGuest"
              />
              <label class="form-check-label" for="checkoutAsGuest">
                Checkout as Guest
              </label>
            </div>

            <button type="submit" class="btn btn-success w-100">Continue</button>
          </form>
        </div>

        <!-- Order Summary -->
        <div class="col-md-6">
          <h3>Order Summary</h3>

          <% if (cart.length === 0) { %>
            <div class="alert alert-info">Your cart is empty.</div>
          <% } else { %>
            <ul class="list-group mb-3">
              <% let total = 0; %>
              <% cart.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between lh-sm">
                  <div>
                    <h6 class="my-0"><%= item.name %> (Size: <%= item.size %>)</h6>
                    <small class="text-muted">Qty: <%= item.quantity %></small>
                  </div>
                  <span class="text-muted">
                    £<%= (item.price * item.quantity).toFixed(2) %>
                  </span>
                </li>
                <% total += item.price * item.quantity; %>
              <% }); %>
              <li class="list-group-item d-flex justify-content-between">
                <span>Total</span>
                <strong>£<%= total.toFixed(2) %></strong>
              </li>
            </ul>
          <% } %>
        </div>
      </div>
    </main>

    <footer class="text-center mt-5">
      <p>&copy; 2025 The T Shirt Store</p>
    </footer>

    <!-- Title Case + Upper Case Script -->
    <script>
      function toTitleCase(str) {
        return str
          .toLowerCase()
          .split(" ")
          .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
          .join(" ");
      }

      document.addEventListener("DOMContentLoaded", () => {
        const fieldsToTitleCase = [
          "fullName",
          "street",
          "city",
          "country",
        ];

        fieldsToTitleCase.forEach((fieldId) => {
          const field = document.getElementById(fieldId);
          field.addEventListener("blur", () => {
            field.value = toTitleCase(field.value.trim());
          });
        });

        const postcodeField = document.getElementById("postcode");
        postcodeField.addEventListener("blur", () => {
          postcodeField.value = postcodeField.value.trim().toUpperCase();
        });
      });
    </script>
  </body>
</html>
