<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Checkout - The T Shirt Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- Navbar/Header -->
    <%- include('partials/header') %>

    <main class="container my-5">
      <h1 class="mb-4">Checkout</h1>

      <div class="row">
        <!-- Shipping Address Form -->
        <div class="col-md-6">
          <h3>Shipping Details</h3>

          <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger"><%= error %></div>
          <% } %>

          <!-- 
            ðŸ”§ FORM ACTIONS
            For guest checkout: /checkout/guest
            For logged-in checkout: /checkout
            Update this action dynamically in your routes/views as needed 
          -->
          <form
            action="<%= guestCheckout ? '/checkout/guest' : '/checkout' %>"
            method="POST"
          >
            <!-- Full Name -->
            <div class="mb-3">
              <label for="name" class="form-label">Full Name</label>
              <input
                type="text"
                name="name"
                id="name"
                class="form-control"
                required
                value="<%= user.name %>"
              />
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                required
                value="<%= user.email %>"
              />
            </div>

            <!-- Phone (optional) -->
            <div class="mb-3">
              <label for="phone" class="form-label"
                >Phone Number (optional)</label
              >
              <input
                type="tel"
                name="phone"
                id="phone"
                class="form-control"
                value="<%= user.phone || '' %>"
              />
            </div>

            <!-- Street Address -->
            <div class="mb-3">
              <label for="street" class="form-label">Street Address</label>
              <input
                type="text"
                name="street"
                id="street"
                class="form-control"
                required
                value="<%= user.street %>"
              />
            </div>

            <!-- City -->
            <div class="mb-3">
              <label for="city" class="form-label">City</label>
              <input
                type="text"
                name="city"
                id="city"
                class="form-control"
                required
                value="<%= user.city %>"
              />
            </div>

            <!-- Postcode -->
            <div class="mb-3">
              <label for="postcode" class="form-label">Postcode</label>
              <input
                type="text"
                name="postcode"
                id="postcode"
                class="form-control"
                required
                value="<%= user.postcode %>"
              />
            </div>

            <!-- Country -->
            <div class="mb-3">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                name="country"
                id="country"
                class="form-control"
                required
                value="<%= user.country %>"
              />
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-success w-100">
              Continue
            </button>
          </form>
        </div>

        <!-- Order Summary -->
        <div class="col-md-6">
          <h3>Order Summary</h3>

          <% if (cart.length === 0) { %>
          <div class="alert alert-info">Your cart is empty.</div>
          <% } else { %>
          <ul class="list-group mb-3">
            <% let total = 0; %> <% cart.forEach(item => { %>
            <li
              class="list-group-item d-flex justify-content-between lh-sm"
              id="order-summary-item"
            >
              <div>
                <h6 class="my-0" id="product-summary">
                  <%= item.name %> (Size: <%= item.size %>)
                </h6>
                <small class="text-muted" id="product-quantity">
                  Qty: <%= item.quantity %>
                </small>
              </div>
              <span class="text-muted" id="product-price">
                Â£<%= (item.price * item.quantity).toFixed(2) %>
              </span>
            </li>

            <% total += item.price * item.quantity; %> <% }); %>
            <li
              class="list-group-item d-flex justify-content-between"
              id="order-total-row"
            >
              <span>Total</span>
              <strong id="order-total">Â£<%= total.toFixed(2) %></strong>
            </li>
          </ul>
          <% } %>
        </div>
      </div>
    </main>

    <footer class="text-center mt-5">
      <p>&copy; 2025 The T Shirt Store</p>
    </footer>

    <!-- Title Case + Upper Case Script -->
    <script>
      function toTitleCase(str) {
        return str
          .toLowerCase()
          .split(" ")
          .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
          .join(" ");
      }

      document.addEventListener("DOMContentLoaded", () => {
        const fieldsToTitleCase = ["name", "street", "city", "country"];

        fieldsToTitleCase.forEach((fieldId) => {
          const field = document.getElementById(fieldId);
          if (field) {
            field.addEventListener("blur", () => {
              field.value = toTitleCase(field.value.trim());
            });
          }
        });

        const postcodeField = document.getElementById("postcode");
        if (postcodeField) {
          postcodeField.addEventListener("blur", () => {
            postcodeField.value = postcodeField.value.trim().toUpperCase();
          });
        }
      });
    </script>
    <%- include('partials/footer') %>
  </body>
</html>
