<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - The T Shirt Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
    </style>
  </head>

  <body>
    <!-- Shared Header Include -->
    <%- include('partials/header') %>

    <!-- Login Form Content -->
    <main class="container my-5">
      <h2 class="mb-4">Login to Your Account</h2>

      <% if (error) { %>
      <div class="alert alert-danger w-50 mx-auto"><%= error %></div>
      <% } %> <% if (success) { %>
      <div class="alert alert-success w-50 mx-auto"><%= success %></div>
      <% } %>

      <form action="/login" method="POST" class="w-50 mx-auto" id="loginForm">
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter your email"
            required
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter your password"
            required
          />
        </div>

        <button type="submit" class="btn btn-success w-100 mb-2">Login</button>
        <button
          type="button"
          class="btn btn-secondary w-100"
          onclick="resetForm()"
        >
          Clear Form
        </button>
      </form>

      <!-- Forgot Password Link -->
      <div class="w-50 mx-auto text-center mt-4">
        <a href="#" id="forgot-password-link">Forgotten Password?</a>

        <!-- Hidden Reset Form -->
        <div id="forgot-password-form" style="display: none; margin-top: 1rem">
          <form action="/forgot-password" method="POST">
            <div class="mb-3">
              <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Your registered email"
                required
              />
            </div>

            <div class="mb-3">
              <input
                type="password"
                name="newPassword"
                class="form-control"
                placeholder="New password"
                required
              />
            </div>

            <button type="submit" class="btn btn-warning w-100">
              Reset Password
            </button>
          </form>
        </div>
      </div>
    </main>

    <!-- Shared Footer Include -->
    <%- include('partials/footer') %>

    <script>
      function resetForm() {
        document.getElementById("loginForm").reset();
      }

      document
        .getElementById("forgot-password-link")
        .addEventListener("click", function (e) {
          e.preventDefault();
          const form = document.getElementById("forgot-password-form");
          form.style.display = form.style.display === "none" ? "block" : "none";
        });
    </script>
  </body>
</html>
