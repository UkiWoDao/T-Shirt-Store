<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Your Cart - The T Shirt Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- Shared Header Include -->
    <%- include('partials/header', { cart: cart, session: session }) %>

    <!-- Cart Page Content -->
    <main class="container my-5">
      <h2 class="mb-4">Your Shopping Cart</h2>

      <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
      <a href="/" class="btn btn-outline-primary">← Continue Shopping</a>
      <% } else { %>
      <table class="table table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Remove</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %> <% cart.forEach(item => { %> <% const quantity =
          item.quantity || 1; %> <% total += item.price * quantity; %>

          <tr>
            <td style="width: 100px">
              <img
                src="<%= item.image %>"
                alt="<%= item.name %>"
                class="img-fluid"
              />
            </td>
            <td><%= item.name %></td>
            <td>£<%= item.price.toFixed(2) %></td>
            <td><%= quantity %></td>
            <td>
              <form action="/cart/remove" method="POST">
                <input
                  type="hidden"
                  name="productId"
                  value="<%= item.productId %>"
                />
                <button type="submit" class="btn btn-danger btn-sm">
                  Remove
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="/" class="btn btn-outline-primary">← Continue Shopping</a>
        <div>
          <h4 class="mb-3">Total: £<%= total.toFixed(2) %></h4>
          <a href="/checkout" class="btn btn-success btn-lg"
            >Proceed to Checkout</a
          >
        </div>
      </div>
      <% } %>
    </main>

    <!-- Shared Footer Include -->
    <%- include('partials/footer') %>
  </body>
</html>
