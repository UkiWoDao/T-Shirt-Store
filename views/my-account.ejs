<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Account - The T Shirt Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .navbar {
        background-color: #343a40 !important;
      }
      .navbar a {
        color: #fff !important;
      }
      footer {
        margin-top: 50px;
        padding: 20px;
        text-align: center;
        background-color: #343a40;
        color: #fff;
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <header class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="/">The T Shirt Store</a>

        <div class="navbar-nav ms-auto d-flex flex-row gap-3">
          <a class="nav-link" href="/">Home</a>
          <a class="nav-link" href="/cart">Cart</a>
          <a class="nav-link" href="/login">Login</a>
          <a class="nav-link" href="/register">Register</a>
          <a class="nav-link" href="/my-account">My Account</a>
        </div>
      </div>
    </header>

    <!-- My Account Content -->
    <main class="container my-5">
      <h1 class="my-4">My Account</h1>

      <a href="/logout" class="btn btn-outline-secondary mb-4">Logout</a>

      <% if (orders.length === 0) { %>
      <p>You haven't placed any orders yet.</p>
      <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Order Number</th>
            <th>Status</th>
            <th>Total (Â£)</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
          <tr>
            <td><%= order.order_number %></td>
            <td><%= order.status %></td>
            <td><%= order.total_amount %></td>
            <td><%= order.order_date %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </main>

    <!-- Footer -->
    <footer>
      <p>&copy; 2025 The T Shirt Store</p>
    </footer>
  </body>
</html>
